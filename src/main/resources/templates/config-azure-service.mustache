<div id="azure-selection" class="hidden">
    {{#services.content.1}}
        <div id="services">
            <div class="columns is-multiline">
                {{#content}}
                    <div class="column is-half module-input">
                        <label class="checkbox module-checkbox">
                            <input tabindex="13" type="checkbox" name="services" value="{{id}}">
                            {{name}}
                            <p class="help-block">{{#description}}{{.}}{{/description}}</p>
                        </label>
                    </div>
                {{/content}}
            </div>
        </div>
    {{/services.content.1}}
    <div class="field has-addons medium-top-margin">
        <p class="subtitle is-6">
            <strong>Create a new service:</strong>
        </p>
        <p class="control">
            <input class="input" type="text" placeholder="Your service name">
        </p>
        <p class="control">
            <button class="button">
                + Create service
            </button>
        </p>
    </div>
    <hr class="medium-top-margin"/>
    <div class="medium-top-margin">
        <h3 class="title is-6">Configured services</h3>
        <ul id="selected-modules-list">
        </ul>
    </div>
    <div class="button-group">
        <p class="has-text-centered">
            <button onclick="gtag('event', 'click', { event_category: 'Go to infra config', event_action: 'click'});"
                    tabindex="13" id="previous-step" type="button" class="button" role="button">
                Previous
            </button>
            <button onclick="gtag('event', 'click', { event_category: 'Project Generation', event_action: 'click'});"
                    tabindex="14" id="generate-project" type="submit" class="button" role="button">
                Generate Project
            </button>
        </p>
    </div>
</div>
