<div id="infra-selection">
    {{#services.content.0}}
        <h3 class="title is-6">Select {{name}}</h3>
        <div id="services">
            <div class="columns is-multiline">
                {{#content}}
                    <div class="column is-half">
                        <label class="checkbox module-checkbox">
                            <input tabindex="13" type="checkbox" name="services" value="{{id}}">
                            {{name}}
                            <input class="hidden port-input" type="number" tabindex="14" name="{{portName}}" value="{{defaultPort}}">
                            <p class="help-block">{{#description}}{{.}}{{/description}}</p>
                        </label>
                    </div>
                {{/content}}
            </div>
        </div>
    {{/services.content.0}}
    <div class="button-group">
        <p class="has-text-centered">
            <button onclick="gtag('event', 'click', { event_category: 'Go to azure config', event_action: 'click'});"
                    tabindex="12" id="next-step" type="button" class="button" role="button">
                Next
            </button>
        </p>
    </div>
</div>
